{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "module": "ESNext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@env": ["src/environments/environment.ts"],
      "@aptsi-types": [
        "../types/dist"
      ],
    },
    "useDefineForClassFields": false
  },
  "references": [{ "path": "../types" }]
}
